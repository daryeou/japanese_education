<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeaeaea"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/maincomment"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textviewintro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello"
        android:ellipsize="marquee"
        android:focusable="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="@string/introcomment"
        android:textSize="7sp" />

    <ListView
        android:id="@+id/listviewintro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewintro"
        android:background="@drawable/roundrect"
        android:choiceMode="singleChoice"
        android:divider="#00000000"
        android:dividerHeight="1dp"
        android:layoutAnimation="@anim/anim_layout_controller"
        android:persistentDrawingCache="all"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/Explanation"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:autoLink="web"
        android:background="@drawable/roundrect"
        android:linksClickable="true"
        android:padding="10dp"
        android:text="@string/exp"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/charactor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/Explanation"
        android:layout_alignParentRight="true"
        android:background="@drawable/roundrect"
        android:padding="10dp"
        android:scaleType="fitCenter" />
</RelativeLayout>
